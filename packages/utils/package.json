    "@types/lodash": "^4.14.149",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "typescript": "^4.0.5"
  },
  "jest": {
    "preset": "../../node_modules/@standardnotes/config/src/jest.json",
    "coverageThreshold": {
