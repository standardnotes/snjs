{
  "name": "@standardnotes/features",
  "version": "1.18.2",
  "engines": {
    "node": ">=14.0.0 <17.0.0"
  },
  "description": "Features SDK for Standard Notes projects",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "clean": "rm -fr dist",
    "prestart": "yarn clean",
    "start": "tsc -p tsconfig.json --watch",
    "build": "tsc -p tsconfig.json && node features-to-json.mjs && cp -r components dist/static",
    "package-components": "node features-to-json.mjs && node package-components.mjs",
    "lint": "eslint . --ext .ts",
    "submodules": "git submodule update --force --remote"
  },
  "dependencies": {
    "@standardnotes/auth": "3.8.3",
    "@standardnotes/common": "1.2.1"
  },
  "devDependencies": {
    "@standardnotes/config": "^2.2.0",
    "archiver": "^5.3.0",
    "typescript": "^4.0.5"
  }
}
