{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "newLine": "lf",
    "noUnusedParameters": true,
    "declaration": true,
    "declarationDir": "../dist/@types",
    "outDir": "../dist/@types",
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    "paths": {
      "@Lib/*": ["*"],
      "@Services/*": ["Services/*"],
      "@Models/*": ["Models/*"],
      "@Protocol/*": ["Protocol/*"],
      "@Payloads/*": ["Protocol/payloads/*"]
    }
  },
  "exclude": ["../package.json"]
}
