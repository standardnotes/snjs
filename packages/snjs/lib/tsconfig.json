{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "newLine": "lf",
    "noUnusedParameters": true,
    "declaration": true,
    "declarationDir": "../dist/@types",
    "outDir": "../dist/@types",
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "@Lib/*": ["*"],
      "@Services/*": ["./services/*"],
      "@Models/*": ["./models/*"],
      "@Protocol/*": ["./protocol/*"],
      "@Payloads/*": ["./protocol/payloads/*"]
    }
  }
}
