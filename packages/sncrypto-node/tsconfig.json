{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./dist",
    "composite": true,
    "inlineSourceMap": true,
    "types": [
      "jest",
      "node"
    ]
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "dist",
    "**/*.spec.ts"
  ]
}
