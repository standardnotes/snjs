{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./dist",
    "composite": true,
    "inlineSourceMap": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types", "typings"]
  },
  "include": ["src/**/*", "typings/**/*"],
  "exclude": ["node_modules", "test/**/*"]
}
