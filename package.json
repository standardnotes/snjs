{
  "name": "@standardnotes/snjs-monorepo",
  "private": true,
  "author": "Standard Notes",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "engines": {
    "node": ">=16.0.0 <17.0.0"
  },
  "scripts": {
    "start": "yarn workspaces foreach -pt -j 10 --verbose run start",
    "test:unit": "yarn workspaces foreach -pt -j 10 --verbose run test:unit",
    "start:e2e:mocha": "yarn run start:test-server:dev",
    "start:e2e:docker": "yarn run test:e2e:dev-setup",
    "start:test-server": "yarn node e2e-server.js",
    "start:test-server:dev": "yarn node e2e-server.js --dev",
    "test:e2e": "bash test.sh stable",
    "test:e2e:dev-server": "docker-compose up -d",
    "test:e2e:dev-setup": "docker-compose up",
    "test:e2e:dev": "mocha-headless-chrome --timeout 1200000 -f http://localhost:9002/packages/snjs/mocha/test.html?sync_server_host_name=localhost",
    "clean": "yarn workspaces foreach -pt -j 10 --verbose run clean",
    "build": "yarn clean && yarn workspaces foreach -pt -j 10 --verbose run build",
    "lint": "yarn workspaces foreach -pt -j 10 --verbose --exclude @standardnotes/snjs run lint",
    "version-bump": "lerna version --conventional-commits --yes -m \"chore(release): publish\"",
    "publish-packages": "lerna publish from-git --yes"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@lerna-lite/cli": "^1.5.1",
    "@lerna-lite/list": "^1.5.1",
    "@lerna-lite/run": "^1.5.1",
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.0",
    "@typescript-eslint/parser": "^5.30.0",
    "connect": "^3.7.0",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "mocha-headless-chrome": "^4.0.0",
    "prettier": "^2.7.1",
    "serve-static": "^1.15.0",
    "typescript": "^4.7.4"
  },
  "packageManager": "yarn@3.2.1",
  "dependenciesMeta": {
    "chai@4.3.6": {
      "unplugged": true
    },
    "chai-subset@1.6.0": {
      "unplugged": true
    },
    "mocha@9.2.2": {
      "unplugged": true
    },
    "regenerator-runtime@0.13.9": {
      "unplugged": true
    },
    "sinon@13.0.2": {
      "unplugged": true
    }
  }
}
